<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hotel Form</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" />
  <script src="./ajax.js"></script>
  <style>
    body {
      background: white;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .box {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      width: 70%;
      margin: 50px auto;
      padding: 40px 30px;
      background-color: #fff;
    }

    .form-group label {
      font-weight: 500;
    }

    .form-control,
    select {
      height: 40px;
    }

    .btn-submit-hotel {
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: #fff;
      font-weight: 600;
      border: none;
      width: 150px;
      height: 45px;
      transition: background 0.3s;
    }

    .btn-submit-hotel:hover {
      background: #185a9d !important;
    }

    .alert {
      margin-top: 20px;
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: white;
      font-weight: 500;
      border: none;
      text-align: center;
    }

    .btn-row {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    h3 {
      color: #185a9d;
      padding: 15px;
      border-radius: 6px;
    }

    @media (max-width: 768px) {
      .btn-row {
        flex-direction: column;
        align-items: center;
      }

      .btn-submit-hotel {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <div class="box">
    <h3 class="text-center mb-4 text-uppercase">Book Hotel Details</h3>
    
    <form action="/savebook" method="post" id="hotelForm">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label>User Name</label>
          <select name="userid" class="form-control">
            <option selected disabled>Select User</option>
            <% Userdata.forEach((item, index) => { %>
              <option value="<%= item.userid %>"><%= item.username %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group">
        <select class="form-control" name="hotel_id" id="dropbox">
          <option selected disabled>Select Hotel</option>
            <% Hoteldata.forEach((item, index) => { %>
          <option value="<%=item.hotel_id%>"><%=item.hotel_name%></option>
            <% }); %>
        </select>
      </div>
      
        <div class="form-group col-md-6">
          <label>Booking Date</label>
          <input type="date" class="form-control" name="booking_date"  />
        </div>

        

        
        <div class="form-group col-md-6">
          <label>Checkin Date</label>
          <input type="email" class="form-control" name="checkin_date" />
        </div>

        <div class="form-group col-md-6">
          <label>Checkin Time</label>
          <input type="time" class="form-control" name="checkin_time"/>
        </div>

        <div class="form-group col-md-6">
          <label>Checkout Date</label>
          <input type="date" class="form-control" name="checkout_date"  />
        </div>

        <div class="form-group col-md-6">
          <label>Checkout Time</label>
          <input type="time" class="form-control" name="checkout_time"  />
        </div>

      <% if (msg) { %>
        <div id="msgBox" class="alert alert-dismissible fade show" role="alert" style="display: none;">
          <strong><%= msg %></strong>
        </div>
      <% } %>

      <div class="btn-row">
       <a href="/reviewDash"><input type="submit" class="btn btn-submit-hotel"  value="Book Hotel" /></a>
        <a href="/" class="btn btn-submit-hotel text-center d-flex align-items-center justify-content-center">‚Üê Back</a>
      </div>
    </form>
  </div>

  <!-- Show message box after form submit -->
  <script>
    document.getElementById("hotelForm").addEventListener("submit", function () {
      const msgBox = document.getElementById("msgBox");
      if (msgBox) {
        msgBox.style.display = "block";
      }
    });
  </script>

</body>
</html>
