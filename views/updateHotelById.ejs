<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hotel Form</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" />
  <script src="./ajax.js"></script>
  <style>
    body {
      background: white;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .box {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      border-radius: 10px;
      width: 70%;
      margin: 50px auto;
      padding: 40px 30px;
      background-color: #fff;
    }

    .form-group label {
      font-weight: 500;
    }

    .form-control,
    select {
      height: 40px;
    }

    .btn-submit-hotel {
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: #fff;
      font-weight: 600;
      border: none;
      width: 150px;
      height: 45px;
      transition: background 0.3s;
    }

    .btn-submit-hotel:hover {
      background: #185a9d !important;
    }

    .alert {
      margin-top: 20px;
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: white;
      font-weight: 500;
      border: none;
    }

    .btn-row {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    h3 {
      color: white;
      padding: 15px;
      border-radius: 6px;
      color: #185a9d;
    }

    @media (max-width: 768px) {
      .btn-row {
        flex-direction: column;
        align-items: center;
      }

      .btn-submit-hotel {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <div class="box">
    <h3 class="text-center mb-4 text-uppercase">Upadte Hotel Details</h3>
    
    <form action="/finalupdateHotel" method="post">
      <div class="form-row">

	 <div class="form-group col-md-6">
          <label>Hotel Name</label>
          <input type="hidden" class="form-control" name="hotel_id" value="<%=erecord[0].hotel_id%>"  />
        </div>


        <div class="form-group col-md-6">
          <label>Hotel Name</label>
          <input type="text" class="form-control" name="hotel_name" value="<%=erecord[0].hotel_name%>"  />
        </div>

        <div class="form-group col-md-6">
          <label>Hotel Address</label>
          <input type="text" class="form-control" name="hotel_address" value="<%=erecord[0].hotel_address%>"  />
        </div>

        <div class="form-group col-md-6">
          <label>City</label>
          <select name="city_id" class="form-control" onchange="fetcharea(this.value)" id="ns">
  
  <% Citdata.forEach((item, index) => { %>
    <option value="<%= item.city_id %>" <%= (item.city_name === erecord[0].city_name) ? 'selected' : '' %>>
      <%= item.city_name %>
    </option>
  <% }); %>
</select>
        </div>

        <div class="form-group col-md-6">
          <label>Area</label>
          <select name="area_id" class="form-control" id="area" required>

  <% Areadata.forEach((item, index) => { %>
    <option value="<%= item.area_id %>" <%= (item.area_id === erecord[0].area_id) ? 'selected' : '' %>>
      <%= item.area_name %>
    </option>
  <% }); %>
</select>
        </div>

        <div class="form-group col-md-6">
          <label>Email</label>
          <input type="email" class="form-control" name="hotel_email" value="<%=erecord[0].hotel_email%>" />
        </div>

        <div class="form-group col-md-6">
          <label>Contact</label>
          <input type="text" class="form-control" name="hotel_contact" value="<%=erecord[0].hotel_contact%>" />
        </div>

        <div class="form-group col-md-6">
          <label>Rating</label>
          <input type="text" class="form-control" name="rating" value="<%=erecord[0].rating%>" />
        </div>

        <div class="form-group col-md-6">
            <label>Image</label>
    <select name="pic_id" class="form-control" required>
    <option disabled>Select Image</option>
    <% Picdata.forEach((item, index) => { %>
      <option value="<%= item.pic_id %>" <%= (item.pic_id === erecord[0].pic_id) ? 'selected' : '' %>>
        <%= item.filename %>
      </option>
    <% }); %>
  </select>
</div>

      
      <div class="btn-row">
        <input type="submit" class="btn btn-submit-hotel" value="Upadate  Hotel" />
        <a href="/" class="btn btn-submit-hotel text-center d-flex align-items-center justify-content-center">← Back</a>
      </div>
    </form>
  </div>

</body>
</html>