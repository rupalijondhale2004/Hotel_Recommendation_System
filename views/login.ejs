      crossorigin="anonymous"
    />
		<style>
		.box
		{
			box-shadow: 10px 8px 10px rgba(0, 0, 0, 0.1);
			background-color: #f2f2f2;
			padding-top:30px;
			border-radius:0px 30px 0px 30px;
			width:40%;
			height:60vh;
			margin:auto;
			margin-top:30px;
		}
		.form-group
		{
			margin-top:30px;
			margin-left:50px;
			
		}
		
		p
		{
			text-align:center;
		}

	
	</style>

     </head>
  <body>
	<%- include('home.ejs') -%>

       
	<div class="box">
	 <form name="frm" action="/validate" method="POST"> 
		<div class="form-group">
		      <input type="text" class="form-control"  name="username"  style="width:400px"  placeholder="Enter User Name"/>
	        </div>
	        <div class="form-group">
		      <input type="text" class="form-control"  name="password"  style="width:400px" placeholder="Enter  Password"/>
	        </div>
	        <div class="form-group">
		      <input type="submit" class="form-control"    style="width:400px; background-color:black; color:white" name="s" value="Login"/>
		</div>
		
		<div class="alert alert-warning alert-dismissible fade show bg-primary text-white" style="width:400px; margin-left:50px" role="alert">
            <strong><%=msg%></strong>   
          </div>
			<p>Don't have an account yet ? <a href="/signup">Sign Up</a></p>
	</form>
	</div>
		 
	 
