<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hotel Form</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" />
  <style>
    body {
      background: #f9f9f9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .box {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      border-radius: 10px;
      width: 70%;
      margin: 50px auto;
      padding: 40px 30px;
      background-color: #fff;
    }

    .form-group label {
      font-weight: 500;
    }

    .form-control,
    select {
      height: 40px;
    }

    .btn-orange {
      background-color: #ff8800;
      color: #fff;
      font-weight: 600;
      border: none;
      width: 150px;
      height: 45px;
      transition: background 0.3s;
    }

    .btn-orange:hover {
      background-color: #e06d00;
    }

    .alert {
      margin-top: 20px;
    }

    .btn-row {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    @media (max-width: 768px) {
      .btn-row {
        flex-direction: column;
        align-items: center;
      }

      .btn-orange {
        width: 100%;
      }
    }
  </style>
</head>
<body>

  <div class="box">
    <h3 class="text-center mb-4 text-uppercase" style="color: #ff8800;">Add Hotel Details</h3>
    
    <form action="/savehotel" method="post">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label>Hotel Name</label>
          <input type="text" class="form-control" name="hotel_name" placeholder="Enter Hotel Name" />
        </div>

        <div class="form-group col-md-6">
          <label>Hotel Address</label>
          <input type="text" class="form-control" name="hotel_address" placeholder="Enter Hotel Address" />
        </div>

        <div class="form-group col-md-6">
          <label>City</label>
          <select name="city_id" class="form-control">
            <option selected disabled>Select City</option>
            <% Citdata.forEach((item, index) => { %>
              <option value="<%= item.city_id %>"><%= item.city_name %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-group col-md-6">
          <label>Area</label>
          <select name="area_id" class="form-control">
            <option selected disabled>Select Area</option>
            <% Areadata.forEach((item, index) => { %>
              <option value="<%= item.area_id %>"><%= item.area_name %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-group col-md-6">
          <label>Email</label>
          <input type="email" class="form-control" name="hotel_email" placeholder="Enter Hotel Email" />
        </div>

        <div class="form-group col-md-6">
          <label>Contact</label>
          <input type="text" class="form-control" name="hotel_contact" placeholder="Enter Hotel Contact" />
        </div>

        <div class="form-group col-md-6">
          <label>Rating</label>
          <input type="text" class="form-control" name="rating" placeholder="Enter Rating" />
        </div>

        <div class="form-group col-md-6">
          <label>Hotel Image</label>
          <select name="pic_id" class="form-control">
            <option selected disabled>Select Image</option>
            <% Picdata.forEach((item, index) => { %>
              <option value="<%= item.pic_id %>"><%= item.filename %></option>
            <% }); %>
          </select>
        </div>
      </div>

      <!-- Message Box -->
      <% if (msg) { %>
        <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
          <strong><%= msg %></strong>
        </div>
      <% } %>

      <!-- Buttons Side by Side -->
      <div class="btn-row">
        <input type="submit" class="btn btn-orange" value="Add Hotel" />
        <a href="/" class="btn btn-orange text-center d-flex align-items-center justify-content-center">‚Üê Back</a>
      </div>
    </form>
  </div>

</body>
</html>
