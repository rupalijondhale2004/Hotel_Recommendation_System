<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Upload Image</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"/>
  <script type="text/javascript" src="validationusingnod.js"></script>

  <style>
    body {
      background-color: #f9f9f9;
      font-family: Arial, sans-serif;
    }

    .box {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      width: 40%;
      padding: 40px;
      margin: 60px auto;
      background-color: #fff;
    }

    .form-group input[type="text"] {
      width: 100%;
      height: 45px;
      padding: 5px;
    }

    .alert {
      margin-bottom: 30px;
      text-align: center;
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: white;
      font-weight: 500;
      border: none;
      display: none;
    }

    .btn-submit-amenities {
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: #fff;
      font-weight: 600;
      width: 150px;
      height: 40px;
      border: none;
      border-radius: 5px;
      transition: 0.3s;
    }

    .btn-submit-amenities:hover {
      background-color: #185a9d;
    }

    .btn-row {
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    @media (max-width: 768px) {
      .box {
        width: 90%;
      }

      .btn-row {
        flex-direction: column;
        align-items: center;
      }

      .btn-submit-amenities {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="box">
    <h3 class="text-center text-uppercase mb-4" style="color:#185a9d;">ADD AMENITIES</h3>

    <form id="uploadForm" action="/saveaddImage" method="post" enctype="">
      

      <div class="form-group">
        <select class="form-control" name="hotel_id" id="dropbox">
          <option selected disabled>Select Hotel</option>
            <% Hoteldata.forEach((item, index) => { %>
          <option value="<%=item.hotel_id%>"><%=item.hotel_name%></option>
            <% }); %>
        </select>
      </div>
      <div class="form-group col-md-6">
          <label>Hotel Image</label>
          <select name="pic_id" class="form-control">
            <option selected disabled>Select Image</option>
            <% Picdata.forEach((item, index) => { %>
              <option value="<%= item.pic_id %>"><%= item.filename %></option>
            <% }); %>
          </select>
        </div>
      </div>

      <!-- Message Box -->
      <div id="msgBox" class="alert alert-dismissible fade show" role="alert">
        <strong id="msgText"></strong>
      </div>

      <!-- Buttons Side-by-Side -->
      <div class="btn-row">
        <input type="submit" class="btn btn-submit-amenities" id="ns" value="Add Amenities" />
        <a href="/" class="btn btn-submit-amenities d-flex align-items-center justify-content-center">‚Üê Back</a>
      </div>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

  <!-- Show message box dynamically -->
  <script>
    document.getElementById("uploadForm").addEventListener("submit", function (event) {
      event.preventDefault(); // Stop form from immediately submitting

      const msgBox = document.getElementById("msgBox");
      const msgText = document.getElementById("msgText");

      if (msgBox && msgText) {
        msgText.textContent = "Amenity added successfully!";
        msgBox.style.display = "block";
      }

      // Optional: Automatically submit form after 2 seconds
      setTimeout(() => {
        this.submit();
      }, 2000);
    });
  </script>
</body>
</html>
