<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Add Image</title>

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"/>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .box {
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      width: 40%;
      padding: 40px;
      margin: 60px auto;
      background-color: #fff;
    }

    .form-control {
      height: 50px;
      font-size: 16px;
      padding: 10px 15px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .alert {
      margin-bottom: 25px;
      text-align: center;
      color: white;
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      border: none;
      border-radius: 6px;
      font-weight: 500;
      padding: 12px;
      display: none;
    }

    .btn-row {
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .btn-submit-area {
      background: #43cea2;
      background: -webkit-linear-gradient(to right, #185a9d, #43cea2);
      background: linear-gradient(to right, #185a9d, #43cea2);
      color: #fff;
      font-weight: 600;
      width: 150px;
      height: 45px;
      border: none;
      border-radius: 5px;
      text-align: center;
      line-height: 45px;
      transition: background 0.3s;
      text-decoration: none;
    }

    .btn-submit-area:hover {
      background-color: #185a9d;
      color: #fff;
    }

    @media (max-width: 768px) {
      .box {
        width: 90%;
      }

      .btn-row {
        flex-direction: column;
        align-items: center;
        gap: 10px;
      }

      .btn-submit-area {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <div class="box">
    <h4 class="text-center text-uppercase mb-4" style="color:#185a9d;">ADD IMAGE</h4>

    <form id="uploadForm" action="/saveaddImage" method="post" enctype="">

      <div class="form-group">
        <select class="form-control" name="hotel_id" id="dropbox">
          <option selected disabled>Select Hotel</option>
          <% Hoteldata.forEach((item, index) => { %>
            <option value="<%= item.hotel_id %>"><%= item.hotel_name %></option>
          <% }); %>
        </select>
      </div>

      <div class="form-group">
        <select name="pic_id" class="form-control">
          <option selected disabled>Select Image</option>
          <% Picdata.forEach((item, index) => { %>
            <option value="<%= item.pic_id %>"><%= item.filename %></option>
          <% }); %>
        </select>
      </div>

      <!-- Message Box -->
      <div id="msgBox" class="alert" role="alert">
        <strong id="msgText"></strong>
      </div>

      <!-- Buttons -->
      <div class="btn-row">
        <input type="submit" class="btn-submit-area" id="ns" value="Add Image" />
        <a href="/" class="btn-submit-area"><i class="fas fa-arrow-left mr-1"></i>Back</a>
      </div>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>

  <!-- Show message box dynamically -->
  <script>
    document.getElementById("uploadForm").addEventListener("submit", function (event) {
      event.preventDefault(); // Stop form from immediately submitting

      const msgBox = document.getElementById("msgBox");
      const msgText = document.getElementById("msgText");

      if (msgBox && msgText) {
        msgText.textContent = "Image added successfully!";
        msgBox.style.display = "block";
      }

      // Optional: Automatically submit form after 2 seconds
      setTimeout(() => {
        this.submit();
      }, 2000);
    });
  </script>
</body>
</html>
